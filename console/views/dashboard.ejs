<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nexus | Security Orchestrator</title>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&display=swap"
        rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/nexus-admin/socket.io.js"></script>
    <style>
        :root {
            --primary: #472C8C;
            --primary-light: #5d34a4;
            --bg: #F4F6F9;
            --sidebar: #472C8C;
            --sidebar-active: #5E39B1;
            --text-main: #1D1D21;
            --text-muted: #8E92BC;
            --card-bg: #FFFFFF;
            --border: #EDF0F5;
            --success: #10b981;
            --danger: #ef4444;
            --warning: #f59e0b;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Outfit', sans-serif;
        }

        body {
            background: var(--bg);
            color: var(--text-main);
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        /* Sidebar */
        .sidebar {
            width: 280px;
            background: var(--sidebar);
            display: flex;
            flex-direction: column;
            padding: 40px 20px;
        }

        .sidebar-logo {
            display: flex;
            align-items: center;
            gap: 12px;
            color: white;
            font-size: 24px;
            font-weight: 800;
            margin-bottom: 60px;
            padding-left: 20px;
        }

        .nav-links {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .nav-link {
            display: flex;
            align-items: center;
            gap: 15px;
            padding: 14px 20px;
            color: rgba(255, 255, 255, 0.7);
            text-decoration: none;
            font-weight: 500;
            border-radius: 12px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            cursor: pointer;
        }

        .nav-link svg {
            width: 20px;
            height: 20px;
            opacity: 0.7;
        }

        .nav-link:hover {
            color: white;
            background: rgba(255, 255, 255, 0.05);
        }

        .nav-link.active {
            color: white;
            background: var(--sidebar-active);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .nav-link.active svg {
            opacity: 1;
        }

        /* Main Content */
        .main {
            flex: 1;
            display: flex;
            flex-direction: column;
            overflow-y: auto;
            padding: 40px 60px;
        }

        header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 40px;
        }

        .header-title {
            font-size: 28px;
            font-weight: 700;
            color: var(--text-main);
        }

        .btn {
            padding: 10px 24px;
            border-radius: 10px;
            font-weight: 600;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.2s;
            border: none;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .btn-outline {
            background: white;
            color: var(--text-main);
            border: 1px solid var(--border);
        }

        .btn-primary {
            background: var(--primary);
            color: white;
        }

        .btn-danger {
            background: var(--danger);
            color: white;
        }

        /* Views */
        .view-content {
            display: none;
        }

        .view-content.active {
            display: block;
        }

        /* Card Grid */
        .dashboard-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 25px;
        }

        .card {
            background: white;
            border-radius: 20px;
            padding: 24px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.02);
            display: flex;
            flex-direction: column;
            position: relative;
        }

        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 12px;
        }

        .card-title {
            font-size: 18px;
            font-weight: 700;
            color: var(--text-main);
        }

        .card-icon {
            width: 32px;
            height: 32px;
            background: var(--bg);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--primary);
        }

        .card-icon svg {
            width: 18px;
            height: 18px;
        }

        .card-subtitle {
            font-size: 13px;
            color: var(--text-muted);
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            display: inline-block;
        }

        .dot-primary {
            background: var(--primary);
        }

        .stat-value {
            font-size: 32px;
            font-weight: 800;
            margin-bottom: 5px;
        }

        .chart-container {
            height: 120px;
            width: 100%;
        }

        /* Table Styling */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

        th {
            text-align: left;
            font-size: 12px;
            color: var(--text-muted);
            font-weight: 600;
            padding-bottom: 12px;
        }

        td {
            padding: 10px 0;
            font-size: 13px;
            font-weight: 500;
            border-bottom: 1px solid var(--border);
        }

        .badge {
            padding: 4px 10px;
            border-radius: 6px;
            font-size: 11px;
            font-weight: 700;
        }

        .badge-success {
            background: #E8F8F0;
            color: #10B981;
        }

        .badge-danger {
            background: #FEEEEE;
            color: #EF4444;
        }

        /* Configuration Panels */
        .panel {
            background: white;
            border-radius: 20px;
            padding: 32px;
            margin-bottom: 24px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.02);
        }

        .group-title {
            font-size: 18px;
            font-weight: 700;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .input-row {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 16px 0;
            border-bottom: 1px solid var(--border);
        }

        .input-row:last-child {
            border: none;
        }

        .input-info h4 {
            font-size: 15px;
            font-weight: 600;
        }

        .input-info p {
            font-size: 13px;
            color: var(--text-muted);
        }

        input[type="number"],
        input[type="text"] {
            padding: 10px 14px;
            border: 1px solid var(--border);
            border-radius: 10px;
            width: 100%;
            max-width: 250px;
            outline: none;
            font-weight: 600;
        }

        .manual-ban-form {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

        .mitigation-notice {
            position: fixed;
            bottom: 40px;
            right: 40px;
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            padding: 20px 28px;
            border-radius: 20px;
            border: 1px solid var(--danger);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            display: none;
            align-items: center;
            gap: 16px;
            z-index: 10000;
        }
    </style>
</head>

<body>

    <aside class="sidebar">
        <div class="sidebar-logo">
            <svg class="logo-sq" viewBox="0 0 24 24" style="width: 32px; height: 32px; fill: white;">
                <path d="M12 2L3 7v10l9 5 9-5V7l-9-5zm0 2.18L19.5 8.5v7l-7.5 4.18-7.5-4.18v-7L12 4.18z" />
            </svg>
            Nexus
        </div>
        <nav class="nav-links">
            <a onclick="switchView('dashboard')" id="nav-dashboard" class="nav-link active">General</a>
            <a onclick="switchView('security')" id="nav-security" class="nav-link">Security</a>
            <a onclick="switchView('settings')" id="nav-settings" class="nav-link">Settings</a>
        </nav>
    </aside>

    <main class="main">
        <header>
            <div class="header-title" id="page-title">Overview</div>
            <div class="header-actions">
                <button class="btn btn-primary" onclick="switchView('settings')">Sync Configuration</button>
            </div>
        </header>

        <!-- DASHBOARD VIEW -->
        <div id="view-dashboard" class="view-content active">
            <div class="dashboard-grid">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Nexus Core</div>
                    </div>
                    <div class="card-subtitle"><span class="dot dot-primary"></span> Live Monitor Active</div>
                    <div class="stat-value" id="stat-total">0</div>
                    <div style="font-size: 13px; color: var(--text-muted); font-weight: 600;">Inbound Requests</div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Neutralized Threats</div>
                    </div>
                    <div class="card-subtitle"><span class="dot" style="background:var(--danger)"></span> Protection
                        Active</div>
                    <div class="stat-value" id="stat-blocked">0</div>
                    <div style="font-size: 13px; color: var(--text-muted); font-weight: 600;">Blocked Nodes</div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Network Health</div>
                    </div>
                    <div class="card-subtitle"><span class="dot" style="background:var(--success)"></span> Performance
                        Peak</div>
                    <div class="stat-value" id="stat-latency">- ms</div>
                    <div style="font-size: 13px; color: var(--text-muted); font-weight: 600;">Avg Propagation Delay
                    </div>
                </div>

                <div class="card" style="grid-column: span 2;">
                    <div class="card-title">Recent Ingress</div>
                    <table>
                        <thead>
                            <tr>
                                <th>SOURCE</th>
                                <th>PATH</th>
                                <th>DELAY</th>
                                <th>RESULT</th>
                            </tr>
                        </thead>
                        <tbody id="feed-recent"></tbody>
                    </table>
                </div>

                <div class="card">
                    <div class="card-title">Mitigation Queue</div>
                    <table>
                        <thead>
                            <tr>
                                <th>NODE</th>
                                <th>REASON</th>
                            </tr>
                        </thead>
                        <tbody id="jail-list"></tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- ANALYTICS VIEW -->
        <div id="view-analytics" class="view-content">
            <div class="panel">
                <div class="group-title">Traffic Distribution (Last 12h)</div>
                <div style="height: 300px;"><canvas id="chart-main"></canvas></div>
            </div>
            <div class="panel">
                <div class="group-title">Top Hostile Nodes</div>
                <table id="top-ips-table">
                    <thead>
                        <tr>
                            <th>IP ADDRESS</th>
                            <th>TOTAL REQUESTS</th>
                            <th style="text-align:right;">ACTION</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>

        <!-- SECURITY VIEW -->
        <div id="view-security" class="view-content">
            <div class="panel">
                <div class="group-title">Manual Node Neutralization</div>
                <div class="manual-ban-form">
                    <input type="text" id="ban-ip" placeholder="Target IP Address">
                    <input type="text" id="ban-reason" placeholder="Reason (Optional)">
                    <button class="btn btn-danger" onclick="manualBan()">Neutralize Node</button>
                </div>
            </div>
            <div class="panel">
                <div class="group-title">Active Mitigations</div>
                <table>
                    <thead>
                        <tr>
                            <th>IP ADDRESS</th>
                            <th>REASON</th>
                            <th>ACTION</th>
                        </tr>
                    </thead>
                    <tbody id="jail-list-full"></tbody>
                </table>
            </div>
        </div>

        <!-- SETTINGS VIEW -->
        <div id="view-settings" class="view-content">
            <div class="panel">
                <div class="group-title">Shield Parameters</div>
                <div class="input-row">
                    <div class="input-info">
                        <h4>Safe Refresh Limit (Soft)</h4>
                        <p>Requests per minute before temporary rate limiting (No Ban)</p>
                    </div>
                    <input type="number" id="conf-max-req">
                </div>
                <div class="input-row">
                    <div class="input-info">
                        <h4>Protocol Spike Shield</h4>
                        <p>Total concurrent capacity allowed before Hard Ban</p>
                    </div>
                    <input type="number" id="conf-burst">
                </div>
                <div style="margin-top: 30px;">
                    <button class="btn btn-primary" onclick="saveFirewall()">Save Protocol Rules</button>
                </div>
            </div>
        </div>
    </main>

    <script id="nexus-payload" type="application/json"><%- payload %></script>
    <script>
        const payload = JSON.parse(document.getElementById('nexus-payload').textContent);
        const socket = io({ path: '/nexus-admin/socket' });

        // Initial setup
        document.getElementById('stat-total').innerText = payload.stats.totalRequests;
        document.getElementById('stat-blocked').innerText = payload.stats.totalBlocked;
        document.getElementById('stat-latency').innerText = payload.stats.avgLatency + 'ms';
        document.getElementById('conf-max-req').value = payload.config.security.rateLimit.maxRequests;
        document.getElementById('conf-burst').value = payload.config.security.burstLimit.maxRequests;

        function switchView(view) {
            document.querySelectorAll('.view-content').forEach(v => v.classList.remove('active'));
            document.querySelectorAll('.nav-link').forEach(n => n.classList.remove('active'));
            document.getElementById('view-' + view).classList.add('active');
            document.getElementById('nav-' + view).classList.add('active');
            document.getElementById('page-title').innerText = view.charAt(0).toUpperCase() + view.slice(1);
        }

        function updateRecentFeed(log) {
            const tbody = document.getElementById('feed-recent');
            const row = `<tr>
                <td>${log.ip}</td>
                <td>${log.path}</td>
                <td style="color:var(--primary)">${log.latency}ms</td>
                <td><span class="badge ${log.status === 200 ? 'badge-success' : 'badge-danger'}">${log.status}</span></td>
            </tr>`;
            tbody.insertAdjacentHTML('afterbegin', row);
            if (tbody.children.length > 10) tbody.lastElementChild.remove();
        }

        socket.on('traffic', (log) => {
            updateRecentFeed(log);
        });

        socket.on('stats_update', (stats) => {
            document.getElementById('stat-total').innerText = stats.totalRequests;
            document.getElementById('stat-blocked').innerText = stats.totalBlocked;
            document.getElementById('stat-latency').innerText = stats.avgLatency + 'ms';
        });

        // Initialize Analytics Chart
        const ctx = document.getElementById('chart-main').getContext('2d');
        const mainChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: payload.analytics.hourlyTraffic.map(h => h.hour),
                datasets: [{
                    label: 'Requests',
                    data: payload.analytics.hourlyTraffic.map(h => h.count),
                    backgroundColor: '#472C8C',
                    borderRadius: 5
                }]
            },
            options: { maintainAspectRatio: false }
        });

        // Populate Top IPs with Ban Button
        const topIpsBody = document.querySelector('#top-ips-table tbody');
        payload.analytics.topIPs.forEach(ip => {
            const row = `<tr>
                <td>${ip.ip}</td>
                <td>${ip.count}</td>
                <td style="text-align:right;">
                    <button class="btn btn-danger" style="padding:4px 10px; font-size:11px;" onclick="quickBan('${ip.ip}')">Ban</button>
                </td>
            </tr>`;
            topIpsBody.innerHTML += row;
        });

        async function quickBan(ip) {
            if (!confirm('Ban IP: ' + ip + '?')) return;
            const res = await fetch('/nexus-admin/api/block', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ ip, reason: 'Quick Ban' })
            });
            if (res.ok) { alert('Banned'); location.reload(); }
        }

        async function manualBan() {
            const ip = document.getElementById('ban-ip').value;
            const reason = document.getElementById('ban-reason').value;
            if (!ip) return alert('IP Required');
            const res = await fetch('/nexus-admin/api/block', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ ip, reason })
            });
            if (res.ok) {
                alert('Node Neutralized');
                location.reload();
            }
        }

        async function saveFirewall() {
            const maxReq = parseInt(document.getElementById('conf-max-req').value);
            const burst = parseInt(document.getElementById('conf-burst').value);
            const res = await fetch('/nexus-admin/api/config', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    security: {
                        rateLimit: { ...payload.config.security.rateLimit, maxRequests: maxReq },
                        burstLimit: { ...payload.config.security.burstLimit, maxRequests: burst }
                    }
                })
            });
            if (res.ok) alert('Guard Rules Synchronized');
        }

        // Render mitigated IPs
        function renderJail() {
            const jail = document.getElementById('jail-list');
            const jailFull = document.getElementById('jail-list-full');
            payload.blockedIps.forEach(ip => {
                const row = `<tr><td>${ip.ip}</td><td>${ip.reason}</td></tr>`;
                jail.innerHTML += row;
                jailFull.innerHTML += `<tr>
                    <td>${ip.ip}</td>
                    <td>${ip.reason}</td>
                    <td><button onclick="unblock('${ip.ip}')" class="btn btn-outline" style="padding:5px 10px; font-size:11px">Release</button></td>
                </tr>`;
            });
        }
        renderJail();

        async function unblock(ip) {
            await fetch('/nexus-admin/api/unblock', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ ip })
            });
            // location.reload(); 
            // Find target rows and remove them without reload
            document.querySelectorAll(`tr`).forEach(row => {
                if (row.innerText.includes(ip)) row.remove();
            });
        }

        payload.recentLogs.forEach(log => updateRecentFeed(log));
    </script>
</body>

</html>